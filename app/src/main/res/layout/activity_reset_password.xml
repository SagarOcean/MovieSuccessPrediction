<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/text_light_blue"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".Auth.ResetPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_light_blue"
            android:enabled="false"
            android:paddingLeft="5dp"
            android:text="Forgot Password"
            android:textColor="#ffffff"
            android:layout_marginTop="150dp"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_light_blue"
            android:enabled="false"
            android:paddingLeft="5dp"
            android:text="Enter your email address and we'll send you a code to reset your password"
            android:textColor="#ffffff"
            android:layout_marginTop="75dp"
            android:textSize="15sp"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetProgress"
            android:visibility="invisible"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@color/text_light_blue"
            android:layout_marginTop="10dp"
            android:textColorHint="#fff"
            android:layout_height="match_parent">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/myPrimary"
                android:inputType="textEmailAddress"
                android:id="@+id/resetEmail"
                android:textSize="15dp"
                android:hint="Email"
                android:textColorHint="#fff"

                />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/sendCode"
            android:textSize="25sp"
            android:textColor="#fff"
            android:text="Submit"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>